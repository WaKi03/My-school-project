<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal"
	android:gravity="center">

	<TableLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_margin="30dp">

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="wrap_content"
				android:text="Дано"
				android:layout_marginBottom="10dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="wrap_content"
				android:text="Решение"
				android:layout_marginStart="5dp"/>

		</TableRow>

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:text="s="
					android:id="@+id/secondTextView1"
					android:height="50dp"
					android:gravity="center"/>

				<EditText
					android:layout_height="wrap_content"
					android:inputType="number"
					android:layout_width="30dp"
					android:ems="10"
					android:layout_toRightOf="@id/secondTextView1"
					android:id="@+id/secondEditText1"/>

				<TextView
					android:layout_height="50dp"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:text="м"
					android:layout_toRightOf="@id/secondEditText1"
					android:gravity="center"/>

			</RelativeLayout>

			<ImageView
				android:layout_height="50dp"
				android:layout_width="wrap_content"
				android:src="@drawable/png"
				android:layout_margin="5dp"/>

		</TableRow>

		<TableRow
			android:layout_height="100dp"
			android:layout_width="wrap_content">

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="100dp">

				<TextView
					android:layout_height="50dp"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:text="t="
					android:id="@+id/secondTextView2"
					android:gravity="center"/>

				<EditText
					android:layout_height="wrap_content"
					android:inputType="number"
					android:layout_width="30dp"
					android:ems="10"
					android:layout_toRightOf="@id/secondTextView2"
					android:id="@+id/mainEditText1"/>

				<TextView
					android:layout_height="50dp"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:text="с"
					android:layout_toRightOf="@id/mainEditText1"
					android:gravity="center"/>

			</RelativeLayout>

		</TableRow>

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<TextView
				android:layout_height="50dp"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:text="v=?"
				android:layout_toRightOf="@id/mainEditText1"
				android:gravity="center|left"
				android:layout_margin="5dp"/>

		</TableRow>

	</TableLayout>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Решить"
		android:background="#00FFF3"
		android:textColor="#00654A"
		android:shadowColor="#8B8B8B"
		android:rotation="3"/>

</LinearLayout>

